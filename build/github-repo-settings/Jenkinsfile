pipeline {
  agent {
    dockerfile {
      dir 'build'
    }
  }

  options {
    buildDiscarder(logRotator(numToKeepStr: '10'))
    disableConcurrentBuilds()
  }

  parameters {
    booleanParam name: 'dryRun', defaultValue: true, description: 'Whether the build should really make a change or not'
  }

  triggers {
    cron '@midnight'
  }

  stages {
    stage('build') {
      steps {
        script {
          withCredentials([file(credentialsId: 'github-ivyteam-token-repo-manager', variable: 'tokenFile')]) {
            maven cmd: "clean compile exec:java -DDRY_RUN=${params.dryRun} -DGITHUB.TOKEN.FILE=${tokenFile} -Dexec.mainClass=\"com.axonivy.github.GitHubRepoSettingsManager\""
          }
        }
      }
    }
  }
}
