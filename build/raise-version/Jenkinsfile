pipeline {
  agent {
    dockerfile {
      dir 'build'
    }
  }

  options {
    buildDiscarder(logRotator(numToKeepStr: '10'))
    disableConcurrentBuilds()
  }

  triggers {
    cron '@midnight'
  }
  
  parameters {
    booleanParam name: 'dryRun', defaultValue: true, description: 'whether the build should push the changes or not'
    string(name: 'newVersion', defaultValue: '10.0.0-SNAPSHOT', description: 'The new ivy version with -SNAPSHOT e.g. 9.1.0-SNAPSHOT')
  }

  stages {
    stage('raise-version') {
      steps {        
        script {
          sh "git config --global user.name 'ivy-team'"
          sh "git config --global user.email 'info@ivyteam.ch'"
          withEnv(['GIT_SSH_COMMAND=ssh -o StrictHostKeyChecking=no']) {
            sshagent(credentials: ['github-axonivy']) {
              def dryRunCommand = params.dryRun ? '--dry-run' : ''
              sh "build/raise-version/raise.sh ${params.newVersion} master ${dryRunCommand}"
            }
          }
        }
      }
    }
  }
}
